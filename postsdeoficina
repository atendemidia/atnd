    function gerarLegenda() {
        const a = intro[Math.floor(Math.random() * intro.length)];
        const b = meio[Math.floor(Math.random() * meio.length)];
        const c = final[Math.floor(Math.random() * final.length)];
        const h = hashtags[Math.floor(Math.random() * hashtags.length)];

        let texto = `${a} ${b} ${c}\n${h}`;
        return texto.length > 840 ? texto.slice(0, 235) + "..." : texto;
    }

    // FUN√á√ÉO DE C√ìPIA COM FADE
    function copiarTexto(botao, texto) {
        navigator.clipboard.writeText(texto);

        const alert = botao.parentElement.querySelector(".copy-alert");
        alert.style.opacity = 1;

        setTimeout(() => {
            alert.style.opacity = 0;
        }, 900);
    }

    // GERA 5 FRASES NO REFRESH
    function generatePhrases() {
        const container = document.getElementById("phrases");
        container.innerHTML = "";

        for (let i = 0; i < 5; i++) {
            const frase = gerarLegenda();

            container.innerHTML += `
                <div class="phrase">
